<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FootballMatches</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FootballMatches.styles.css" asp-append-version="true" />
    <style>
        body { direction: rtl; font-family: 'Cairo', Tahoma, Arial, sans-serif; background: #f8f9fa; }
        .navbar { background: linear-gradient(90deg, #0d6efd 60%, #0a58ca 100%); box-shadow: 0 2px 8px #0001; }
        .navbar .navbar-brand, .navbar .nav-link { color: #fff !important; font-weight: bold; }
        .navbar .nav-link.active, .navbar .nav-link:hover { color: #ffe082 !important; }
        .navbar .navbar-brand { font-size: 1.5rem; letter-spacing: 1px; }
        .navbar-nav { flex-direction: row-reverse; }
        .navbar .nav-item { margin-left: 1rem; }
        .card { border-radius: 1rem; box-shadow: 0 2px 8px #0002; }
        .card-body { background: #fff; border-radius: 1rem; }
        footer { background: #0d6efd; color: #fff; }
        .border.bg-light { background: #e3f2fd !important; }
    </style>
    <script type='text/javascript' src='//pl27100822.profitabletratecpm.com/2a/e0/eb/2ae0eb807f4c0d77fe146ae8ebd9e35f.js'></script>
</head>
<body>
    <header>
        <!-- مكان إعلان أعلى الصفحة -->
        <div class="container my-2">
            <div class="border p-2 text-center bg-light">مكان إعلان أعلى الصفحة</div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom mb-3">
            <div class="container-fluid">
                <div class="d-flex w-100 flex-row-reverse align-items-center">
                    <a class="navbar-brand ms-4" asp-area="" asp-controller="Matches" asp-action="Index">⚽ FootballMatches</a>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-grow-1">
                        <ul class="navbar-nav flex-row-reverse w-100 justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Matches" asp-action="Index">
                                    <i class="fas fa-futbol me-1"></i>مباريات اليوم
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Login">
                                    <i class="fas fa-user-shield me-1"></i>لوحة التحكم
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">حول الموقع</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">اتصل بنا</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">سياسة الخصوصية</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FootballMatches - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
